@*@model Info.Models*@
@{
    ViewData["Title"] = "Index";
    var objectProjectlist = ViewData["ProjectList"] as IEnumerable<ProjectDetails>;
}

<div class"cotainer  p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Project List</h2>
        </div>
        <div class="col-6 text-end">
            
            <a asp-controller="ProjectDetails" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Create new Project</a>
        </div>
    </div>
    <br /> <br />
    </div>
<h1>Project</h1>

<table class="table table-bordered table-striped" style="width:100%":>

<thead>
    <tr>
        <th>
            Project Id
            
        </th>
        <th>
            Project Name
        </th>
        <th>
            Project Description
        </th>
        <th>
            Created By
        </th>
        <th>
            Updated By
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model )
        {
            <tr>
                <td width="50%">
                    @obj.Project_Id
                </td>
                <td width="30%">
                    @obj.Project_Name

                </td>
                <td width="30%">
                    @obj.Project_Description

                </td>
                <td width="30%">
                    @obj.Created_By

                </td>
                <td width="30%">
                    @obj.Updated_By

                </td>
     
                      
                <td>
                    <div class=w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="category" asp-route-Id="@obj.Project_Id" class="btn btn-primary mx-2">Edit<i class="bi bi-pencil-square"></i></a>

                    </div>
                    <div class=w-75 btn-group" role="group">
                        <a asp-action="Delete" asp-controller="category" asp-route-Id="@obj.Project_Id" class="btn btn-danger mx-2">Delete<i class="bi bi-trash"></i></a>

                    </div>
                </td>
            </tr>
            
        }
    </tbody>
   </table>
